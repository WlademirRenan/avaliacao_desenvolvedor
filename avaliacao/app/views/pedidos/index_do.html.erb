<h1>Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Comprador</th>
      <th>Descricao</th>
      <th>Preco unitario</th>
      <th>Quantidade</th>
      <th>Endereco</th>
      <th>Fornecedor</th>
      <th>Valor total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.comprador %></td>
        <td><%= pedido.descricao %></td>
        <td><%= pedido.preco_unitario %></td>
        <td><%= pedido.quantidade %></td>
        <td><%= pedido.endereco %></td>
        <td><%= pedido.fornecedor %></td>
        <td><%= pedido.valor_total %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>Valor total dos pedidos: <%= @valor_total_pedidos %>
